<p id="notice"><%= notice %></p>

<h1>Readings</h1>

<table>
  <thead>
    <tr>
      <th colspan="1"></th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @readings.each do |reading| %>
      <tr>
        <td><%= reading.body %></td>
        <td><%= link_to 'Show', reading %></td>
        <td><%= link_to 'Edit', edit_reading_path(reading) %></td>
      </tr>
      <% reading.questions.each_with_index do |question, index| %>
        <tr>
          <td><%= "#{index + 1}. #{question.body}" %></td>
        </tr>
      <% end %>
      <tr>
        <td><%= render 'questions/form', reading: reading, question: Question.new %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reading', new_reading_path %>
