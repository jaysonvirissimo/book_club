<%= form_with(model: section, local: true) do |form| %>
  <% if section.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(section.errors.count, "error") %> prohibited this section from being saved:</h2>

      <ul>
        <% section.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <h3><%= @book.name %></h3>

  <%= form.hidden_field :reading_id, value: @reading.id %>
  <%= form.hidden_field :book_id, value: @book.id %>

  <div class="field">
    <%= form.label :starting_chapter_id %>
    <%= form.select :starting_chapter_id, @book.chapters.in_order.pluck(:number, :id) %>
  </div>

  <div class="field">
    <%= form.label :ending_chapter_id %>
    <%= form.select :ending_chapter_id, @book.chapters.in_order.pluck(:number, :id) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
